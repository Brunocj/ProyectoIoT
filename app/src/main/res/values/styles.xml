<!-- res/values/styles.xml -->
<resources>
    <style name="ShapeAppearanceOverlay.App.CardView.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Corner50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilos para imágenes circulares -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilos para imágenes con bordes redondeados -->
    <style name="RoundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Alias para resolver referencias a @style/Shape -->
    <style name="Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Overlay redondeado (píldora) -->
    <style name="Shape.Pill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Text.SegmentChip" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Chip del segmentado (sin colores; se setean por código) -->
    <style name="SegmentChip" parent="Widget.Material3.Chip.Filter">
        <item name="shapeAppearanceOverlay">@style/Shape.Pill</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">false</item>
    </style>
</resources>
