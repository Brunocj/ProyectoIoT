<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btn_regresar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/Regresar"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gestión de Guías"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"/>

    </LinearLayout>

    <!-- Buscador -->
    <EditText
        android:id="@+id/edtBuscarGuia"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Buscar guías..."
        android:paddingStart="40dp"
        android:background="@drawable/bg_btn_outline_pill"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:imeOptions="actionDone"
        android:singleLine="true" />

    <!-- Chips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/chipTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:text="Todo"
            android:background="@drawable/bg_chip_outline"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/chipPendientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:text="Pendientes"
            android:background="@drawable/bg_chip_pendiente"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/chipAprobados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:text="Aprobados"
            android:background="@drawable/bg_chip_aprobado"
            android:textColor="@color/text_primary" />

        <TextView
            android:id="@+id/chipRechazados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="Rechazados"
            android:background="@drawable/bg_chip_rechazado"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_guias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="12dp"/>
</LinearLayout>
