<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    android:background="#FFFFFF"
    android:paddingHorizontal="16dp"
    android:elevation="0.5dp">

    <ImageView
        android:id="@+id/imgThumb"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/machu_picchu"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_round"
        android:clipToOutline="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Machu Picchu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#101828"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rowRating"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Rating -->
        <LinearLayout
            android:id="@+id/rowRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_star"
                app:tint="#FFC107"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,0"
                android:textColor="#0F172A"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Ubicación -->
        <LinearLayout
            android:id="@+id/rowUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                app:tint="#98A2B3" />

            <TextView
                android:id="@+id/txtUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Cusco"
                android:textColor="#98A2B3"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Precio -->
        <LinearLayout
            android:id="@+id/rowPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rowUbicacion"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. 300"
                android:textColor="#0B6B61"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="/persona"
                android:textColor="#667085"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
