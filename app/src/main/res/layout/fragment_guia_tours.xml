<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloTours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis tours"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor tipo "píldora" -->
    <LinearLayout
        android:id="@+id/segmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_segment_container"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloTours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:chipSpacingHorizontal="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_proximos"
                style="@style/SegmentChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximos"
                android:checkable="true"
                android:checked="true"
                app:useMaterialThemeColors="false"
                app:rippleColor="@android:color/transparent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_en_curso"
                style="@style/SegmentChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En curso"
                android:checkable="true"
                app:useMaterialThemeColors="false"
                app:rippleColor="@android:color/transparent"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_finalizados"
                style="@style/SegmentChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizados"
                android:checkable="true"
                app:useMaterialThemeColors="false"
                app:rippleColor="@android:color/transparent"/>
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E8ECEF"
        app:layout_constraintTop_toBottomOf="@id/segmentContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Contenedor dinámico para el contenido (RecyclerView) -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
