<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:labelVisibilityMode="unlabeled">

    <!-- Zona de bienvenida -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Fernando Godoy"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Zona de contenido de fragments -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Contenido del FrameLayout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- Título de la sección -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próximo tour"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Card del próximo tour -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Información del tour (Macchu Picchu) -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="start|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Nombre del tour -->
                        <TextView
                            android:id="@+id/next_tour_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Macchu Picchu - 2 h"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <!-- Fecha y hora del tour -->
                    <TextView
                        android:id="@+id/next_tour_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoy, 10:00 a. m."
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Botones: Ir al Tour, Ver mapa, Chat -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Botón Ir al Tour -->
                        <Button
                            android:id="@+id/btn_ir_al_tour"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ir al tour"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#006970"
                            android:textColor="#ffffff"
                            android:cornerRadius="12dp"/>

                        <!-- Botón Ver Mapa -->
                        <Button
                            android:id="@+id/btn_ver_mapa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ver mapa"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#ffffff"
                            android:textColor="#0f172a"
                            android:cornerRadius="12dp"/>

                        <!-- Botón Chat -->
                        <Button
                            android:id="@+id/btn_chat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chat"
                            android:backgroundTint="#ffffff"
                            android:textColor="#0f172a"
                            android:cornerRadius="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Título de ofertas disponibles -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ofertas disponibles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginStart="16dp"/>

                <!-- Opción "Ver más" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver más"
                    android:textSize="14sp"
                    android:textColor="#0B6B61"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- Lista de ofertas disponibles -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Card de oferta 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Imagen de la oferta -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:src="@drawable/machu_picchu"
                                android:scaleType="centerCrop"/>

                            <!-- Información de la oferta -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Nombre del tour -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Macchu Picchu"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"/>

                                <!-- Precio de la oferta -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pago: $100"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                            <!-- Fecha y hora de la oferta -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoy, 2:00 p. m."
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card de oferta 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Imagen de la oferta -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:src="@drawable/machu_picchu"
                                android:scaleType="centerCrop"/>

                            <!-- Información de la oferta -->
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Nombre del tour -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Macchu Picchu"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"/>

                                <!-- Precio de la oferta -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pago: $120"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                            <!-- Fecha y hora de la oferta -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoy, 4:00 p. m."
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_guia"
        app:itemIconTint="@color/bottom_nav_icon"
        app:itemTextColor="@color/bottom_nav_icon"
        app:labelVisibilityMode="unlabeled"
        />
</LinearLayout>
