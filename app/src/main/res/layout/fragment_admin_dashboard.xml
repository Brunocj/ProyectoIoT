<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con saludo y avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_bienvenido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bienvenido"
                android:textSize="16sp"
                android:textColor="#1C1C1E" />

            <TextView
                android:id="@+id/tv_initials"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="FG"
                android:gravity="center"
                android:background="@drawable/circle_gray"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Card de Ventas por servicio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:backgroundTint="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas por servicio"
                    android:textSize="14sp"
                    android:textColor="#8E8E93" />

                <TextView
                    android:id="@+id/tv_total_ventas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 750.45"
                    android:textSize="24sp"
                    android:textColor="#1C1C1E"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Cards de estadísticas (Tours Activos y Guías Contratados) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Tours Activos -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#E8F5E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tours Activos"
                        android:textSize="12sp"
                        android:textColor="#8E8E93" />

                    <TextView
                        android:id="@+id/tv_tours_activos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="20sp"
                        android:textColor="#1C1C1E"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Guías Contratados -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#E8F5E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guías Contratados"
                        android:textSize="12sp"
                        android:textColor="#8E8E93" />

                    <TextView
                        android:id="@+id/tv_guias_contratados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="20sp"
                        android:textColor="#1C1C1E"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Gráfico Ventas por Servicios MEJORADO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas por Servicios"
                    android:textSize="18sp"
                    android:textColor="#006970"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- Contenedor con línea de gráfico -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp">

                    <!-- Puntos sobre la línea con valores -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:baselineAligned="false">

                        <!-- Punto Enero -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/120"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/chart_dot_blue" />
                        </LinearLayout>

                        <!-- Punto Febrero -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/95"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginBottom="25dp"
                                android:background="@drawable/chart_dot_blue" />
                        </LinearLayout>

                        <!-- Punto Marzo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/280"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="35dp"
                                android:background="@drawable/chart_dot_large_blue" />
                        </LinearLayout>

                        <!-- Punto Abril -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/420"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="45dp"
                                android:background="@drawable/chart_dot_large_blue" />
                        </LinearLayout>

                        <!-- Punto Mayo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/350"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/chart_dot_large_blue" />
                        </LinearLayout>

                        <!-- Punto Junio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/290"
                                android:textSize="9sp"
                                android:textColor="#007AFF"
                                android:background="@drawable/value_bubble"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginBottom="38dp"
                                android:background="@drawable/chart_dot_large_blue" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <!-- Labels de meses -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ene"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feb"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mar"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Abr"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="May"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jun"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gráfico Ventas por Tour -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas por Tour"
                    android:textSize="18sp"
                    android:textColor="#006970"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- Gráfico de barras elegante -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:baselineAligned="false"
                    android:layout_marginBottom="16dp">

                    <!-- Barra Lima -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E8F4FD">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Barra Machu P -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E8F4FD">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Barra Junín -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E8F4FD">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Barra Ayacucho -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E8F4FD">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Barra Tarapoto (destacada) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginEnd="8dp">

                        <!-- Tooltip -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="#1C1C1E">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/243"
                                android:textSize="11sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                        </androidx.cardview.widget.CardView>

                        <!-- Barra destacada -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="6dp"
                            android:backgroundTint="#1C1C1E">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Barra Iquitos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:backgroundTint="#E8F4FD">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Labels de ciudades -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lima"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Machu P"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Junín"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ayacucho"
                        android:textSize="11sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tarapoto"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Iquitos"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección Ventas por Tour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ventas por Tour"
                android:textSize="16sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Card del Tour Barranco con botón de detalles MEJORADA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header con título y botón de detalles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tour Barranco"
                        android:textSize="18sp"
                        android:textColor="#1C1C1E"
                        android:textStyle="bold" />

                    <!-- Botón de detalles elegante -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_ver_detalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#006970"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ver detalles"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ›"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Información del participante -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        android:backgroundTint="#E3F2FD"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="PP"
                            android:textSize="10sp"
                            android:textColor="#007AFF"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paul Pogba"
                            android:textSize="14sp"
                            android:textColor="#1C1C1E"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guia"
                            android:textSize="11sp"
