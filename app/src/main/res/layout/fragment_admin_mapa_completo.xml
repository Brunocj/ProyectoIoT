<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Mapa de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/full_map_background"
        android:scaleType="centerCrop" />

    <!-- Header superior -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/header_gradient_transparent">

        <!-- Botón atrás -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                app:tint="#1C1C1E" />
        </androidx.cardview.widget.CardView>

        <!-- Título -->
        <TextView
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nuevo Tour"
            android:textColor="#1C1C1E"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Barra de búsqueda -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="12dp"
                app:tint="#8E8E93" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search..."
                android:textSize="14sp"
                android:textColor="#1C1C1E"
                android:textColorHint="#8E8E93"
                android:background="@null"
                android:maxLines="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_filter"
                android:clickable="true"
                android:focusable="true"
                app:tint="#8E8E93" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Punto 1 del tour con imagen -->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        android:backgroundTint="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/machu_picchu"
                android:scaleType="centerCrop" />

            <!-- Rating -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="#1C1C1E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="9sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Punto 2 del tour -->
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="280dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        android:backgroundTint="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lomas_de_lachay"
                android:scaleType="centerCrop" />

            <!-- Rating -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="#1C1C1E">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textSize="9sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Botón flotante para agregar punto -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_add_location"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/form_container"
        android:layout_margin="20dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        android:backgroundTint="#006970"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add"
            app:tint="#FFFFFF" />

    </androidx.cardview.widget.CardView>

    <!-- Formulario inferior -->
    <androidx.cardview.widget.CardView
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título del formulario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configurar Tour"
                android:textSize="18sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Añada las actividades por ubicación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades por ubicación"
                android:textSize="14sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:backgroundTint="#F8F9FA">

                <EditText
                    android:id="@+id/et_activities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Visita guiada, fotografías, degustación..."
                    android:textSize="14sp"
                    android:textColor="#1C1C1E"
                    android:textColorHint="#8E8E93"
                    android:background="@null"
                    android:padding="12dp"
                    android:minLines="2"
                    android:maxLines="4"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences" />

            </androidx.cardview.widget.CardView>

            <!-- Añada la duración del tour -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duración del tour"
                android:textSize="14sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#F8F9FA">

                    <EditText
                        android:id="@+id/et_duration_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Horas"
                        android:textSize="14sp"
                        android:textColor="#1C1C1E"
                        android:textColorHint="#8E8E93"
                        android:background="@null"
                        android:padding="12dp"
                        android:inputType="number"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="y"
                    android:textSize="14sp"
                    android:textColor="#8E8E93"
                    android:layout_marginHorizontal="8dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="#F8F9FA">

                    <EditText
                        android:id="@+id/et_duration_minutes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minutos"
                        android:textSize="14sp"
                        android:textColor="#1C1C1E"
                        android:textColorHint="#8E8E93"
                        android:background="@null"
                        android:padding="12dp"
                        android:inputType="number"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F8F9FA"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:textSize="14sp"
                        android:textColor="#8E8E93"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="12dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#006970"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmar y Continuar"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="12dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Panel inferior con información del punto seleccionado (oculto inicialmente) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/form_container"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plaza de Armas"
                android:textSize="16sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro histórico de Lima, punto de encuentro principal"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#006970"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Editar"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="8dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F8F9FA"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eliminar"
                        android:textSize="12sp"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="8dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>