<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- ============ HERO (foto tour) ============ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/imgHero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/machu_picchu"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/scrim_top"/>
    </FrameLayout>

    <!-- Toolbar con back -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_white"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"/>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ============ CONTENIDO SCROLLEABLE ============ -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="220dp"
        android:paddingBottom="96dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machu Picchu"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black"/>

            <!-- Empresa y grupo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa: Andean Trips"
                    android:textSize="14sp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/tvGrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo estimado: 12"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textColor="#555"/>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcionTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour de 1 día. Traslado a Valle Sagrado..."
                android:textSize="15sp"
                android:textColor="#333"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/btnVerMasDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <!-- Pago + Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <!-- Pago -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#666"/>

                    <TextView
                        android:id="@+id/tvPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 300"
                        android:textSize="15sp"
                        android:textColor="#111"/>
                </LinearLayout>

                <!-- Fechas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fechas y horario"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#666"/>

                    <TextView
                        android:id="@+id/tvFechas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/09/2025 - 08:00 AM"
                        android:textSize="15sp"
                        android:textColor="#111"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Punto de encuentro -->
            <TextView
                android:id="@+id/tvPuntoEncuentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punto de encuentro: Av. El Sol 123, Cusco"
                android:layout_marginTop="16dp"
                android:textSize="15sp"
                android:textColor="#333"/>

            <!-- Requerimientos -->
            <TextView
                android:id="@+id/tvRequerimientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requerimientos: Documento de identidad, carnet de guía"
                android:layout_marginTop="12dp"
                android:textSize="15sp"
                android:textColor="#333"/>

            <!-- Recorrido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorrido"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:id="@+id/imgMapa"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_route"/>

            <!-- Servicios incluidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios incluidos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/tvServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✓ Traslados\n✓ Desayuno\n✗ Almuerzo"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textColor="#333"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTONES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="16dp"
        android:weightSum="2">

        <!-- Botón Rechazar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRechazar"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Rechazar"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#B3261E"
            app:cornerRadius="24dp"
            app:strokeColor="#B3261E"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"
            app:elevation="2dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <!-- Botón Aceptar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptar"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Aceptar oferta"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="#006D5B"
            app:elevation="3dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
