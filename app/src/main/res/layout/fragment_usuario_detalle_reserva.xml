<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detalle_reserva"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarDetalle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/black"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título centrado con los mismos estilos que tu TextView -->
        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la reserva"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarDetalle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarjeta principal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Encabezado "Tu paquete" -->
                    <TextView
                        android:id="@+id/paquete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu paquete"
                        android:layout_marginBottom="8dp"/>

                    <!-- Bloque: imagen, nombre, rating, ubicación -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivHotel"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/machu_picchu"
                            android:scaleType="centerCrop"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/tvHotelName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Machu Picchu"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/ivHotel"
                            app:layout_constraintTop_toTopOf="@id/ivHotel"
                            app:layout_constraintEnd_toStartOf="@id/groupRating"/>

                        <LinearLayout
                            android:id="@+id/groupRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvHotelName">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_star"/>

                            <TextView
                                android:id="@+id/tvRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.7"
                                android:textSize="14sp"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rowLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="6dp"
                            app:layout_constraintStart_toEndOf="@id/ivHotel"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvHotelName">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                app:tint="#808889"
                                android:src="@drawable/ic_location"/>

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cusco"
                                android:textSize="13sp"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="8dp"/>

                    <!-- Título Recorrido + Ver en el mapa -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvRecorrido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recorrido"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvVerMapa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver en el mapa"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBaseline_toBaselineOf="@id/tvRecorrido"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Mini-mapa -->
                    <ImageView
                        android:id="@+id/ivMap"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_route"
                        android:background="@android:color/transparent"/>

                    <!-- Sección Tu reserva -->
                    <TextView
                        android:id="@+id/tvTuReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Tu reserva"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp">

                        <!-- Fecha -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rowFecha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:id="@+id/ivFecha"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#808889"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/tvFechaLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Fecha"
                                android:textColor="#808889"
                                app:layout_constraintStart_toEndOf="@id/ivFecha"
                                app:layout_constraintTop_toTopOf="@id/ivFecha"/>

                            <TextView
                                android:id="@+id/tvFechaValor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 Nov 2025"
                                android:textColor="#000000"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBaseline_toBaselineOf="@id/tvFechaLbl"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Personas -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rowPersonas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:id="@+id/ivPersonas"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_people"
                                app:tint="#808889"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/tvPersonasLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Personas"
                                android:textColor="#808889"
                                app:layout_constraintStart_toEndOf="@id/ivPersonas"
                                app:layout_constraintTop_toTopOf="@id/ivPersonas"/>

                            <TextView
                                android:id="@+id/tvPersonasValor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBaseline_toBaselineOf="@id/tvPersonasLbl"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Empresa -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rowEmpresa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:id="@+id/ivEmpresa"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_buisness"
                                app:tint="#808889"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/tvEmpresaLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Empresa"
                                android:textColor="#808889"
                                app:layout_constraintStart_toEndOf="@id/ivEmpresa"
                                app:layout_constraintTop_toTopOf="@id/ivEmpresa"/>

                            <TextView
                                android:id="@+id/tvEmpresaValor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CuscoTours SA"
                                android:textColor="#000000"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBaseline_toBaselineOf="@id/tvEmpresaLbl"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Contacto -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rowContacto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:id="@+id/ivContacto"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_phone"
                                app:tint="#808889"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/tvContactoLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Contacto"
                                android:textColor="#808889"
                                app:layout_constraintStart_toEndOf="@id/ivContacto"
                                app:layout_constraintTop_toTopOf="@id/ivContacto"/>

                            <TextView
                                android:id="@+id/tvContactoValor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0214345646"
                                android:textColor="#000000"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBaseline_toBaselineOf="@id/tvContactoLbl"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ▼▼ CONTENEDOR DE FRAGMENTS ▼▼ -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="8dp"
                tools:layout="@layout/fragment_usuario_qr_btn" />
            <!-- ▲▲ CONTENEDOR DE FRAGMENTS ▲▲ -->

            <!-- Espacio final -->
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
