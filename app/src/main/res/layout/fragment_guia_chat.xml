<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF"
    android:padding="12dp">

    <!-- ============ ENCABEZADO ============ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sectionHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chat – Guía"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewDot"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>

        <View
            android:id="@+id/viewDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#2E9BFF"
            app:layout_constraintTop_toTopOf="@id/tvSubtitulo"
            app:layout_constraintBottom_toBottomOf="@id/tvSubtitulo"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mensajes de personas en tus tours"
            android:textSize="13sp"
            android:textColor="#7C8794"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintEnd_toStartOf="@id/viewDot"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============ FILTROS (segmento) ============ -->
    <LinearLayout
        android:id="@+id/sectionFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@drawable/bg_segment_container"
        app:layout_constraintTop_toBottomOf="@id/sectionHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chipTodos"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="96dp"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="Todos"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_chip_filled"/>

        <Space android:layout_width="8dp" android:layout_height="1dp"/>

        <TextView
            android:id="@+id/chipActivos"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="120dp"
            android:gravity="center"
            android:paddingHorizontal="14dp"
            android:text="Tours activos"
            android:textSize="13sp"
            android:textColor="#475467"
            android:background="@drawable/bg_chip_outlined"/>
    </LinearLayout>

    <!-- ============ BUSCADOR ============ -->
    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Buscar por nombre o tour..."
        android:paddingStart="40dp"
        android:paddingEnd="12dp"
        android:background="@drawable/bg_round"
        android:textColor="#111827"
        android:textColorHint="#A0A8B3"
        android:inputType="text"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/sectionFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E8ECEF"
        app:layout_constraintTop_toBottomOf="@id/etBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="10dp"/>

    <!-- ============ LISTA ============ -->
    <ScrollView
        android:id="@+id/scrollChats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/containerChats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <!-- ===== ÍTEM 1 ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:tag="tour=Machu Picchu;estado=activo;nombre=Bruno Imanol">

                <ImageView
                    android:id="@+id/ivAvatar1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/default_pfp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle"
                    android:clipToOutline="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvHora1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:12 pm"
                    android:textColor="#95A1AC"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tvNombreTour1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNombreTour1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bruno Imanol  (Machu Picchu)"
                    android:textStyle="bold"
                    android:textSize="15.5sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@id/ivAvatar1"
                    app:layout_constraintEnd_toStartOf="@id/tvHora1"
                    app:layout_constraintTop_toTopOf="@id/ivAvatar1"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvPreview1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tú: Gracias por la aclaración"
                    android:textColor="#95A1AC"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/tvNombreTour1"
                    app:layout_constraintEnd_toStartOf="@id/badge1"
                    app:layout_constraintTop_toBottomOf="@id/tvNombreTour1"
                    android:layout_marginTop="2dp" />

                <FrameLayout
                    android:id="@+id/badge1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/badge_red"
                    android:foregroundGravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tvPreview1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E8ECEF"
                    app:layout_constraintTop_toBottomOf="@id/ivAvatar1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ===== ÍTEM 2 ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:tag="tour=Machu Picchu;estado=activo;nombre=Sofía Vergara">

                <ImageView
                    android:id="@+id/ivAvatar2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/default_pfp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle"
                    android:clipToOutline="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvHora2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:28 pm"
                    android:textColor="#95A1AC"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tvNombreTour2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNombreTour2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sofía Vergara  (Machu Picchu)"
                    android:textStyle="bold"
                    android:textSize="15.5sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@id/ivAvatar2"
                    app:layout_constraintEnd_toStartOf="@id/tvHora2"
                    app:layout_constraintTop_toTopOf="@id/ivAvatar2"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvPreview2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tú: Está bien, gracias"
                    android:textColor="#95A1AC"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/tvNombreTour2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNombreTour2"
                    android:layout_marginTop="2dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E8ECEF"
                    app:layout_constraintTop_toBottomOf="@id/ivAvatar2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ===== ÍTEM 3 ===== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:tag="tour=Fortaleza de Kuelap;estado=activo;nombre=Julio Iglesias">

                <ImageView
                    android:id="@+id/ivAvatar3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/default_pfp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle"
                    android:clipToOutline="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvHora3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:12 pm"
                    android:textColor="#95A1AC"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tvNombreTour3"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvNombreTour3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Julio Iglesias  (Fortaleza de Kuelap)"
                    android:textStyle="bold"
                    android:textSize="15.5sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toEndOf="@id/ivAvatar3"
                    app:layout_constraintEnd_toStartOf="@id/tvHora3"
                    app:layout_constraintTop_toTopOf="@id/ivAvatar3"
                    android:layout_marginStart="12dp" />

                <TextView
                    android:id="@+id/tvPreview3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Julio: Nos vemos maña..."
                    android:textColor="#95A1AC"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/tvNombreTour3"
                    app:layout_constraintEnd_toStartOf="@id/badge3"
                    app:layout_constraintTop_toBottomOf="@id/tvNombreTour3"
                    android:layout_marginTop="2dp" />

                <FrameLayout
                    android:id="@+id/badge3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/badge_red"
                    android:foregroundGravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tvPreview3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>
                </FrameLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#E8ECEF"
                    app:layout_constraintTop_toBottomOf="@id/ivAvatar3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space android:layout_width="match_parent" android:layout_height="16dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
