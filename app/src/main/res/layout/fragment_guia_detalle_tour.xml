<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF">

    <!-- Imagen de cabecera -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/machu_picchu" />

    <!-- Flecha de retroceso encima de la imagen -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Atrás" />

    <!-- Contenedor del resto -->
    <ScrollView
        android:layout_below="@id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Card de detalle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nombre -->
                    <TextView
                        android:id="@+id/txtTourName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Machu Picchu"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Ubicación + Rating -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#777777" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cusco"
                            android:textColor="#777777"
                            android:layout_marginStart="4dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/ic_star"
                            app:tint="#F4B400" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0"
                            android:textColor="@android:color/black"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <!-- Botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <Button
                            android:id="@+id/btnChatTour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat del tour"
                            android:backgroundTint="#0B6B61"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnScanQR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Escanear QR"
                            android:backgroundTint="#0B6B61"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Recorrido -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recorrido"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <!-- Imagen estática como preview -->
                    <ImageView
                        android:id="@+id/mapPreview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_map" />

                    <!-- Resumen -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Resumen"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total clientes\n12" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Check-in realizados\n9" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pendientes\n3" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
