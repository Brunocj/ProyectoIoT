<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Selector a la izquierda (se muestra/oculta desde el Adapter) -->
    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/rbSelect"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cardRoot"
        app:layout_constraintBottom_toBottomOf="@id/cardRoot"
        app:useMaterialThemeColors="true" />

    <!-- Tarjeta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:minHeight="120dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="22dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@id/rbSelect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Fondo gradiente -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_payment_card" />

            <!-- Arcos suaves decorativos -->
            <ImageView
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_gravity="end|top"
                android:translationY="-24dp"
                android:translationX="36dp"
                android:alpha="0.22"
                android:src="@drawable/shape_card_circle_soft" />

            <ImageView
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_gravity="end|bottom"
                android:translationX="8dp"
                android:translationY="6dp"
                android:alpha="0.26"
                android:src="@drawable/shape_card_circle_soft" />

            <!-- Contenido con ConstraintLayout (sin weights) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="24dp"
                android:paddingBottom="28dp">

                <!-- Marca + texto -->
                <ImageView
                    android:id="@+id/imgBrand"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_card_brand"
                    app:tint="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Tarjeta de débito"
                    android:textColor="#E6FFFFFF"
                    android:textSize="18sp"
                    android:letterSpacing="0.02"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@id/imgBrand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/imgBrand" />

                <!-- Número en una sola línea; sin weights -->
                <TextView
                    android:id="@+id/tvMaskedNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="•••• – •••• – •••• – 9432"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/imgBrand"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Columna izquierda: Nombre del titular -->
                <TextView
                    android:id="@+id/labelHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nombre del titular"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tvMaskedNumber"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvCardholder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Jefferson Villegas"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelHolder"
                    app:layout_constraintStart_toStartOf="@id/labelHolder"
                    app:layout_constraintEnd_toStartOf="@id/labelExpGroupGuide"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed" />

                <!-- Guía para separar columnas -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/labelExpGroupGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_begin="207dp" />

                <!-- Columna derecha: Vence -->
                <TextView
                    android:id="@+id/labelExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vence"
                    android:textColor="#CCFFFFFF"
                    android:textSize="13sp"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="@id/labelHolder"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/24"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toBottomOf="@id/labelExp"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Empuje inferior para mantener respiración aunque se oculte algo -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tvCardholder"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
