<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Perfil circular -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_pfp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_circle"
            android:clipToOutline="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matr Kohler"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <!-- Fila ubicación: icono + texto -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#777777"/>

                <TextView
                    android:id="@+id/txtPersonUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Lima"
                    android:textSize="14sp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Title: Popular Tours -->
    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tours populares cerca a ti"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Card grande -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLugar"
        android:layout_width="200dp"
        android:layout_height="280dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="22dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="4dp"
        android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Imagen de fondo -->
            <ImageView
                android:id="@+id/imgFondo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lomas_de_lachay"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name" />

            <!-- Scrim -->
            <ImageView
                android:id="@+id/scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/scrim_bottom"
                android:importantForAccessibility="no" />

            <!-- Contenedor inferior de textos -->
            <LinearLayout
                android:id="@+id/contenedorTextos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Título -->
                <TextView
                    android:id="@+id/txtTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lomas de Lachay"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:shadowColor="#99000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:textSize="18sp" />

                <!-- Ubicación (icono + texto) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:tint="#FFFFFF"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/txtUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Huacho, Lima"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Precio a la izquierda y rating a la derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPrecio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S/.150"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107" />

                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.7"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ======= SECCIÓN: Más Tours ======= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Más Tours"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#101828"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver todo"
            android:textSize="14sp"
            android:textColor="#0B6B61"/>
    </LinearLayout>

    <!-- Chips (sin Material) -->
    <HorizontalScrollView
        android:id="@+id/hsChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp">

        <LinearLayout
            android:id="@+id/chipsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chipTodo"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="Todo"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_filled" />

            <TextView
                android:id="@+id/chipCultural"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:text="  Cultural"
                android:textColor="#475467"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_book"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_chip_outlined" />

            <TextView
                android:id="@+id/chipNaturaleza"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:text="  Naturaleza"
                android:textColor="#475467"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_leaf"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_chip_outlined" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Lista con scroll que ocupa el resto -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titulo1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Machu Picchu"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#101828"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rating1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Rating -->
                    <LinearLayout
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,0"
                            android:textColor="#0F172A"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Ubicación -->
                    <LinearLayout
                        android:id="@+id/rowUbicacion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/titulo1"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#98A2B3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Cusco"
                            android:textColor="#98A2B3"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Precio (debajo de la ubicación) -->
                    <LinearLayout
                        android:id="@+id/rowPrecio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/rowUbicacion1"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 300"
                            android:textColor="#0B6B61"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="/persona"
                            android:textColor="#667085"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titulo12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Machu Picchu"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#101828"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rating12"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Rating -->
                    <LinearLayout
                        android:id="@+id/rating12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,0"
                            android:textColor="#0F172A"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Ubicación -->
                    <LinearLayout
                        android:id="@+id/rowUbicacion12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/titulo12"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#98A2B3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Cusco"
                            android:textColor="#98A2B3"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Precio (debajo de la ubicación) -->
                    <LinearLayout
                        android:id="@+id/rowPrecio12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/rowUbicacion12"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 300"
                            android:textColor="#0B6B61"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="/persona"
                            android:textColor="#667085"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <!-- Título -->
                    <TextView
                        android:id="@+id/titulo123"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Machu Picchu"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#101828"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rating123"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Rating -->
                    <LinearLayout
                        android:id="@+id/rating123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_star"
                            app:tint="#FFC107"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,0"
                            android:textColor="#0F172A"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Ubicación -->
                    <LinearLayout
                        android:id="@+id/rowUbicacion123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/titulo123"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#98A2B3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Cusco"
                            android:textColor="#98A2B3"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Precio (debajo de la ubicación) -->
                    <LinearLayout
                        android:id="@+id/rowPrecio123"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/rowUbicacion123"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S/. 300"
                            android:textColor="#0B6B61"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="/persona"
                            android:textColor="#667085"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
