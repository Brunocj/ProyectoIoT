<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <!-- User Info (igual) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/default_pfp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_circle"
            android:clipToOutline="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matr Kohler"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#777777"/>

                <TextView
                    android:id="@+id/txtPersonUbicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Lima"
                    android:textSize="14sp"
                    android:textColor="#777777"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Title: Popular Tours (igual) -->
    <TextView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tours populares cerca a ti"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- NUEVO: RecyclerView horizontal para cards grandes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDestacados"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:overScrollMode="never" />

    <!-- ======= SECCIÓN: Más Tours (igual) ======= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Más Tours"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#101828"/>

        <TextView
            android:id="@+id/tvVerTodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver todo"
            android:textSize="14sp"
            android:textColor="#0B6B61"/>
    </LinearLayout>

    <!-- Chips (igual) -->
    <HorizontalScrollView
        android:id="@+id/hsChips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp">

        <LinearLayout
            android:id="@+id/chipsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chipTodo"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="Todo"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip_filled" />

            <TextView
                android:id="@+id/chipCultural"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:text="  Cultural"
                android:textColor="#475467"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_book"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_chip_outlined" />

            <TextView
                android:id="@+id/chipNaturaleza"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="72dp"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:text="  Naturaleza"
                android:textColor="#475467"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_leaf"
                android:drawablePadding="6dp"
                android:background="@drawable/bg_chip_outlined" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- NUEVO: RecyclerView vertical para la lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListado"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:overScrollMode="never" />

</LinearLayout>
