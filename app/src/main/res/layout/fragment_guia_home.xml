<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFCFF">

    <!-- Contenido fijo (perfil + próximo tour) -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_pfp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_circle"
                android:clipToOutline="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bruno Imanol"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="#777777"/>

                    <TextView
                        android:id="@+id/txtPersonUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Lima"
                        android:textSize="14sp"
                        android:textColor="#777777"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Card: Próximo tour -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProximoTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTituloProximo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Próximo tour"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#475467" />

                <TextView
                    android:id="@+id/txtNombreTour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Machu Picchu"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#0B6B61" />

                <TextView
                    android:id="@+id/txtFechaTour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="12 de Septiembre, 08:00 AM"
                    android:textSize="14sp"
                    android:textColor="#667085" />

                <TextView
                    android:id="@+id/txtUbicacionTour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Cusco, Perú"
                    android:textSize="14sp"
                    android:textColor="#667085" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/btnVerMapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver mapa"
                        android:textAllCaps="false"
                        android:backgroundTint="#0B6B61"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnIrChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat"
                        android:textAllCaps="false"
                        android:backgroundTint="#0B6B61"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Scroll SOLO para las ofertas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ofertas disponibles"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#101828" />

            <!-- Aquí van los 4 cards de ofertas (como los que ya hiciste) -->
            <!-- Card de oferta 1, 2, 3, 4 ... -->

            <!-- Card de oferta 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:background="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtTituloOferta1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Valle Sagrado"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#101828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cusco"
                        android:textSize="14sp"
                        android:textColor="#98A2B3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 15/09/2025 - 7:00 AM"
                        android:textSize="14sp"
                        android:textColor="#475467"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: S/. 180"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B6B61"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card de oferta 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:background="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtTituloOferta2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Paracas"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#101828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ica"
                        android:textSize="14sp"
                        android:textColor="#98A2B3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 20/09/2025 - 9:00 AM"
                        android:textSize="14sp"
                        android:textColor="#475467"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: S/. 220"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B6B61"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card de oferta 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:background="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtTituloOferta3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Islas Ballestas"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#101828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paracas"
                        android:textSize="14sp"
                        android:textColor="#98A2B3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 25/09/2025 - 8:00 AM"
                        android:textSize="14sp"
                        android:textColor="#475467"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: S/. 250"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B6B61"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card de oferta 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:background="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtTituloOferta4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Arequipa"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#101828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arequipa"
                        android:textSize="14sp"
                        android:textColor="#98A2B3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 28/09/2025 - 10:00 AM"
                        android:textSize="14sp"
                        android:textColor="#475467"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: S/. 300"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B6B61"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card de oferta 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"
                android:background="#FFFFFF"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/machu_picchu"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_round"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/txtTituloOferta5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tour Valle Sagrado"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#101828" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cusco"
                        android:textSize="14sp"
                        android:textColor="#98A2B3"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha: 15/09/2025 - 7:00 AM"
                        android:textSize="14sp"
                        android:textColor="#475467"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: S/. 180"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#0B6B61"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
