<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingHorizontal="16dp">

    <!-- Avatar -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_pfp"
        app:civ_border_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuario autenticado"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintEnd_toStartOf="@id/tvHora"
        app:layout_constraintTop_toTopOf="@id/imgAvatar"
        android:layout_marginStart="12dp"/>

    <!-- Sub1 -->
    <TextView
        android:id="@+id/tvSub1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuario: f.godoy   Rol: Usuario"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tvTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintEnd_toStartOf="@id/tvHora"/>

    <!-- Sub2 -->
    <TextView
        android:id="@+id/tvSub2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="16-08-2025"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvSub1"
        app:layout_constraintEnd_toStartOf="@id/tvHora"/>

    <!-- Hora -->
    <TextView
        android:id="@+id/tvHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:41"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitulo"/>

</androidx.constraintlayout.widget.ConstraintLayout>
