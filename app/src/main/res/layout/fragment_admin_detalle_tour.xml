<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Botón atrás -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp" />

        <!-- Título -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Detalles del Tour"
            android:textSize="18sp"
            android:textColor="#1C1C1E"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Botón opciones -->
        <ImageView
            android:id="@+id/btn_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen principal del tour -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_tour_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/machu_picchu"
                        android:scaleType="centerCrop" />

                    <!-- Overlay gradient -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></View>

                    <!-- Estado del tour -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:backgroundTint="#4CAF50">

                        <TextView
                            android:id="@+id/tv_tour_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="● En Curso"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </androidx.cardview.widget.CardView>

                    <!-- Información básica overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_tour_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Machu Picchu - Ciudadela Inca"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_location"
                                app:tint="#FFFFFF" />

                            <TextView
                                android:id="@+id/tv_tour_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cusco, Perú"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:layout_marginStart="6dp" />

                            <TextView
                                android:id="@+id/tv_tour_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 300/persona"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Información del Guía -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guía Asignado"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1C1C1E"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Avatar del guía -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="2dp">

                            <ImageView
                                android:id="@+id/iv_guide_photo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_profile" />

                        </androidx.cardview.widget.CardView>

                        <!-- Información del guía -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tv_guide_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carlos Mendoza"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:id="@+id/tv_guide_rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.9"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="• 47 tours"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Estado de ubicación del guía -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#E8F5E8">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="En línea"
                                        android:textSize="10sp"
                                        android:textColor="#4CAF50" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tv_guide_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Punto 2/5"
                                android:textSize="10sp"
                                android:textColor="#8E8E93"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botones de acción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_call_guide"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#F8F9FA"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_chat"
                                    app:tint="#006970"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Llamar"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#006970" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_track_guide"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:backgroundTint="#006970"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location"
                                    app:tint="#FFFFFF"
                                    android:layout_marginEnd="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ver Ubicación"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#FFFFFF" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Métricas del Tour -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información del Tour"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1C1C1E"
                        android:layout_marginBottom="12dp" />

                    <!-- Primera fila de métricas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Fecha -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#006970"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_tour_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 Sep 2025"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <!-- Duración -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_clock"
                                app:tint="#006970"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_tour_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8 horas"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duración"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <!-- Clientes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_circle"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_guide"
                                app:tint="#006970"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_clients_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clientes"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Segunda fila de métricas financieras -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Ingresos totales -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_total_earnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 3,600"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresos Totales"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <!-- Pago guía -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_guide_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 150"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pago al Guía"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                        <Space
                            android:layout_width="8dp"
                            android:layout_height="1dp" />

                        <!-- Ganancia neta -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_net_profit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/. 3,450"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#006970" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ganancia Neta"
                                android:textSize="10sp"
                                android:textColor="#8E8E93" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lista de Clientes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Clientes del Tour"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1C1C1E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver todos"
                            android:textSize="12sp"
                            android:textColor="#006970"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Mini lista de clientes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Cliente 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="1dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_profile"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="María González"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+51 987 654 321"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#E8F5E8">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Check-in ✓"
                                    android:textSize="10sp"
                                    android:textColor="#4CAF50"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <!-- Cliente 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="1dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_profile"
                                    android:scaleType="centerCrop" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Carlos Rodríguez"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="#1C1C1E" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+51 987 654 322"
                                    android:textSize="12sp"
                                    android:textColor="#8E8E93" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#FFF3E0">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pendiente"
                                    android:textSize="10sp"
                                    android:textColor="#FF9800"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Botones de acción inferiores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Botón Ver en Mapa -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_view_map"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:backgroundTint="#F8F9FA"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="#006970"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver en Mapa"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#006970" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón Chat -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:backgroundTint="#E3F2FD"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chat"
                    app:tint="#1976D2"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón Procesar Cobros -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_process_payments"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:backgroundTint="#006970"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:tint="#FFFFFF"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procesar Cobros"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>