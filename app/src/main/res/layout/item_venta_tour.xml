<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_venta_tour"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header con título y botón de detalles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_nombre_tour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tour Barranco"
                android:textSize="18sp"
                android:textColor="#1C1C1E"
                android:textStyle="bold" />

            <!-- Botón de detalles -->
            <androidx.cardview.widget.CardView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp"
                android:backgroundTint="#006970">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Información del guía -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#E3F2FD"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tv_iniciales_guia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PP"
                    android:textSize="10sp"
                    android:textColor="#007AFF"
                    android:textStyle="bold"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_guia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paul Pogba"
                    android:textSize="14sp"
                    android:textColor="#1C1C1E"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guia"
                    android:textSize="11sp"
                    android:textColor="#8E8E93" />

            </LinearLayout>

        </LinearLayout>

        <!-- Información del tour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:backgroundTint="#F8F9FA"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tv_numero_personas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥 2"
                    android:textSize="11sp"
                    android:textColor="#8E8E93"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_ubicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Miraflores basstop"
                android:textSize="12sp"
                android:textColor="#8E8E93"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Precio y estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S/. 3,100"
                android:textSize="16sp"
                android:textColor="#006970"
                android:textStyle="bold" />

            <!-- Estado del tour -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:backgroundTint="#E8F5E8">

                <TextView
                    android:id="@+id/tv_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="● Activo"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>