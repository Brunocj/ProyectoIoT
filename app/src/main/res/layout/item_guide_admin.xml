<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar del guía -->
        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/default_pfp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle"
            android:clipToOutline="true"
            android:layout_marginEnd="16dp" />

        <!-- Información del guía -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del guía -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Guía"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Ubicación -->
            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Chip de Idiomas -->
            <TextView
                android:id="@+id/textViewLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiomas"
                android:background="@drawable/bg_chip_role"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Estado y Botones de acción en la misma línea -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Chip de Estado -->
                <TextView
                    android:id="@+id/chipStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendiente"
                    android:background="@drawable/bg_chip_status_pending"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <!-- Botones de acción para pendientes (al lado del estado) -->
                <LinearLayout
                    android:id="@+id/layoutActionButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:visibility="gone">

                    <!-- Botón aprobar (check) -->
                    <ImageView
                        android:id="@+id/buttonApprove"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_check"
                        android:background="@drawable/bg_circle_success"
                        android:padding="5dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Aprobar guía"
                        app:tint="@color/white" />

                    <!-- Botón rechazar (X) -->
                    <ImageView
                        android:id="@+id/buttonReject"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_close"
                        android:background="@drawable/bg_circle_error"
                        android:padding="5dp"
                        android:contentDescription="Rechazar guía"
                        app:tint="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>