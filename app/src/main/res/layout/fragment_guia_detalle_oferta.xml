<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- =========================
         APPBAR CON COLLAPSING TOOLBAR
         ========================= -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@android:color/white"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">

            <!-- Imagen con efecto Parallax -->
            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/machu_picchu"
                android:contentDescription="@null"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"/>

            <!-- Scrim oscuro arriba para mejor contraste -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scrim_top"
                android:scaleType="fitXY"
                android:importantForAccessibility="no"
                app:layout_collapseMode="parallax"/>

            <!-- Toolbar fijo -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarDetalle"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin">

                <!-- Back -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_vertical"
                    android:background="@drawable/bg_circle_white"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@android:color/white"
                    android:contentDescription="@null"/>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- =========================
         CONTENIDO SCROLLEABLE
         ========================= -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Machu Picchu"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@android:color/black"/>

            <!-- Empresa y grupo -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa: Andean Trips"
                    android:textSize="14sp"
                    android:textColor="#555"/>

                <TextView
                    android:id="@+id/tvGrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo estimado: 12"
                    android:layout_marginStart="12dp"
                    android:textSize="14sp"
                    android:textColor="#555"/>
            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvDescripcionTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tour de 1 día. Traslado a Valle Sagrado..."
                android:textSize="15sp"
                android:textColor="#333"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/btnVerMasDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver más"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <!-- Pago + Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <!-- Pago -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#666"/>

                    <TextView
                        android:id="@+id/tvPago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/ 300"
                        android:textSize="15sp"
                        android:textColor="#111"/>
                </LinearLayout>

                <!-- Fechas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fechas y horario"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#666"/>

                    <TextView
                        android:id="@+id/tvFechas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/09/2025 - 08:00 AM"
                        android:textSize="15sp"
                        android:textColor="#111"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Punto de encuentro -->
            <TextView
                android:id="@+id/tvPuntoEncuentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Punto de encuentro: Av. El Sol 123, Cusco"
                android:layout_marginTop="16dp"
                android:textSize="15sp"
                android:textColor="#333"/>

            <!-- Requerimientos -->
            <TextView
                android:id="@+id/tvRequerimientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requerimientos: Documento de identidad, carnet de guía"
                android:layout_marginTop="12dp"
                android:textSize="15sp"
                android:textColor="#333"/>

            <!-- Recorrido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorrido"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="18dp"/>

            <ImageView
                android:id="@+id/imgMapa"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_route"/>

            <!-- Servicios incluidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios incluidos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/tvServicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✓ Traslados\n✓ Desayuno\n✗ Almuerzo"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textColor="#333"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- =========================
         BOTONES INFERIORES FIJOS
         ========================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="16dp"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRechazar"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Rechazar"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#B3261E"
            app:cornerRadius="24dp"
            app:strokeColor="#B3261E"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAceptar"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Aceptar oferta"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:backgroundTint="#006D5B"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
