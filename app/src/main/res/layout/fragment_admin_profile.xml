<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
             android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FCFCFF"
        android:padding="10dp">

        <!-- Contenido scrolleable (encabezado + configuraciones) -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/tvCerrarSesion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="16dp"
                android:paddingEnd="20dp">

                <!-- Encabezado -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_circle"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_pfp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Nombre -->
                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Fernando Godoy"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/ivEye"
                        app:layout_constraintStart_toEndOf="@id/ivAvatar"
                        app:layout_constraintTop_toTopOf="@id/ivAvatar" />

                    <!-- Correo -->
                    <TextView
                        android:id="@+id/tvCorreo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="a20206311@pucp.edu.pe"
                        android:textColor="#8B98A5"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toStartOf="@id/ivEye"
                        app:layout_constraintStart_toStartOf="@id/tvNombre"
                        app:layout_constraintTop_toBottomOf="@id/tvNombre" />

                    <!-- Ojo (ver/ocultar) -->
                    <ImageView
                        android:id="@+id/ivEye"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_eye"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvNombre"
                        app:tint="#6B7280" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Título de sección -->
                <TextView
                    android:id="@+id/tvTituloSeccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Configuraciones"
                    android:textColor="#95A1AC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Ítems -->
                <!-- Métodos de Pago -->
                <LinearLayout
                    android:id="@+id/itemMetodosPago"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_wallet"
                        app:tint="#121212" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Ganancias"
                        android:textColor="@android:color/black"
                        android:textSize="15.5sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8ECEF" />



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8ECEF" />

                <!-- Ayuda -->
                <LinearLayout
                    android:id="@+id/itemAyuda"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_help"
                        app:tint="#121212" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Ayuda"
                        android:textColor="@android:color/black"
                        android:textSize="15.5sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8ECEF" />

                <!-- Espacio antes del botón inferior (para pantallas altas) -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
        </ScrollView>

        <!-- Cerrar Sesión -->
        <TextView
            android:id="@+id/tvCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"
            android:text="Cerrar Sesión"
            android:textColor="#E53935"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>